{
  "name": "tsfga",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.9",
  "workspaces": ["packages/*", "tests/*"],
  "scripts": {
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "changeset": "changeset",
    "db:generate": "turbo run db:generate",
    "db:latest": "turbo run db:latest",
    "db:rollback": "turbo run db:rollback",
    "infra:down": "docker compose down -v",
    "infra:setup": "docker compose up -d --wait && turbo run db:latest",
    "infra:up": "docker compose up -d --wait",
    "release": "turbo run build && changeset publish",
    "turbo:build": "turbo run build",
    "turbo:test:conformance": "turbo run test --filter=@tsfga/conformance",
    "turbo:test:core": "turbo run test --filter=@tsfga/core",
    "turbo:test:kysely": "turbo run test --filter=@tsfga/kysely",
    "turbo:test": "turbo run test",
    "turbo:tsc": "turbo run tsc",
    "version": "changeset version"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@changesets/cli": "2.29.8",
    "turbo": "2.8.9",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
